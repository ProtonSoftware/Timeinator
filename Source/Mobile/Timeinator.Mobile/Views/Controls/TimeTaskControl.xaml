<?xml version="1.0" encoding="utf-8" ?>
<local:ContentControl xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Timeinator.Mobile"
             x:Class="Timeinator.Mobile.TimeTaskControl">

    <local:ContentControl.Resources>

        <ResourceDictionary>
            <ControlTemplate x:Key="ContentTemplate">

                <Frame>

                    <StackLayout Orientation="Vertical">

                        <Label Text="{Binding Name}" />

                    </StackLayout>

                </Frame>

            </ControlTemplate>
        </ResourceDictionary>

    </local:ContentControl.Resources>

    <local:ContentControl ControlTemplate="{StaticResource ContentTemplate}" />

</local:ContentControl>
